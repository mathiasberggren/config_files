shopt -s expand_aliases

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# remove aliases
alias rmi='rm -i'
alias rmri='rm -ri'

# C++ Compilation
alias g++17='g++ -std=c++17'
alias w++17='g++ -std=c++17 -Wall -Weffc++ -Wextra -pedantic'

alias g++20='g++ -std=c++2a'
alias w++20='g++ -std=c++2a -Wall -Weffc++ -Wextra -pedantic'
